{
    "name": "vscode-zookeeper",
    "displayName": "vscode-zookeeper",
    "description": "A Visual Studio Code extension for configuring Apache Zookeeper.",
    "version": "0.0.1",
    "publisher": "zbennett10",
    "engines": {
        "vscode": "^1.24.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*",
        "onDebug",
        "onView:zookeeperExplorer"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "zookeeper.viewNode",
                "title": "View existing data residing in a given Zookeeper ZNode",
                "category": "Zookeeper"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                "id": "zookeeperView",
                "title": "Zookeeper",
                "icon": "media/zookeeper.svg"
                }
            ]
        },
        "views": {
            "zookeeperView": [
                {
                "id": "zookeeperExplorer",
                "name": "Zookeeper"
                }
            ]
        }

    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "dependencies": {
        "node-zookeeper-client": "^0.2.2"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node-zookeeper-client": "^0.2.6",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
